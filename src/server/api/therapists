import { Router } from 'express';
import { getTherapists, createTherapist, updateTherapist, deleteTherapist } from '../../services/therapistService';

const router = Router();

// Get all therapists
router.get('/', async (req, res) => {
    try {
        const therapists = await getTherapists();
        res.status(200).json(therapists);
    } catch (error) {
        res.status(500).json({ message: 'Error retrieving therapists', error });
    }
});

// Create a new therapist
router.post('/', async (req, res) => {
    try {
        const newTherapist = await createTherapist(req.body);
        res.status(201).json(newTherapist);
    } catch (error) {
        res.status(400).json({ message: 'Error creating therapist', error });
    }
});

// Update an existing therapist
router.put('/:id', async (req, res) => {
    try {
        const updatedTherapist = await updateTherapist(req.params.id, req.body);
        res.status(200).json(updatedTherapist);
    } catch (error) {
        res.status(400).json({ message: 'Error updating therapist', error });
    }
});

// Delete a therapist
router.delete('/:id', async (req, res) => {
    try {
        await deleteTherapist(req.params.id);
        res.status(204).send();
    } catch (error) {
        res.status(500).json({ message: 'Error deleting therapist', error });
    }
});

export default router;
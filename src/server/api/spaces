// This file contains API route handlers for managing therapeutic spaces. 

import { NextApiRequest, NextApiResponse } from 'next';
import { prisma } from '../../db/prisma'; // Adjust the import path as necessary

// Handler for getting all therapeutic spaces
export const getSpaces = async (req: NextApiRequest, res: NextApiResponse) => {
    try {
        const spaces = await prisma.space.findMany();
        res.status(200).json(spaces);
    } catch (error) {
        res.status(500).json({ error: 'Failed to fetch spaces' });
    }
};

// Handler for creating a new therapeutic space
export const createSpace = async (req: NextApiRequest, res: NextApiResponse) => {
    if (req.method !== 'POST') {
        return res.status(405).json({ error: 'Method not allowed' });
    }

    const { name, location, description } = req.body;

    try {
        const newSpace = await prisma.space.create({
            data: {
                name,
                location,
                description,
            },
        });
        res.status(201).json(newSpace);
    } catch (error) {
        res.status(500).json({ error: 'Failed to create space' });
    }
};

// Export the API routes
export default async (req: NextApiRequest, res: NextApiResponse) => {
    switch (req.method) {
        case 'GET':
            await getSpaces(req, res);
            break;
        case 'POST':
            await createSpace(req, res);
            break;
        default:
            res.setHeader('Allow', ['GET', 'POST']);
            res.status(405).end(`Method ${req.method} Not Allowed`);
    }
};
import { NextApiRequest, NextApiResponse } from 'next';
import { processPayment, refundPayment } from '../../services/paymentService';

export default async function handler(req: NextApiRequest, res: NextApiResponse) {
    switch (req.method) {
        case 'POST':
            return handlePayment(req, res);
        case 'DELETE':
            return handleRefund(req, res);
        default:
            res.setHeader('Allow', ['POST', 'DELETE']);
            res.status(405).end(`Method ${req.method} Not Allowed`);
    }
}

async function handlePayment(req: NextApiRequest, res: NextApiResponse) {
    try {
        const paymentData = req.body;
        const paymentResult = await processPayment(paymentData);
        res.status(200).json(paymentResult);
    } catch (error) {
        res.status(500).json({ error: 'Payment processing failed' });
    }
}

async function handleRefund(req: NextApiRequest, res: NextApiResponse) {
    try {
        const { paymentId } = req.body;
        const refundResult = await refundPayment(paymentId);
        res.status(200).json(refundResult);
    } catch (error) {
        res.status(500).json({ error: 'Refund processing failed' });
    }
}